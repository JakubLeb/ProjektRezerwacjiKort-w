<Window x:Class="SRKT.WPF.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rejestracja" Height="631" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Padding" Value="2"/>
        </Style>
        <Style TargetType="PasswordBox">
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Padding" Value="2"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Rejestracja nowego uzytkownika" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            
            <Label Content="Imie:"/>
            <TextBox Text="{Binding Imie, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Nazwisko:"/>
            <TextBox Text="{Binding Nazwisko, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Email:"/>
            <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Haslo:"/>
            <PasswordBox x:Name="HasloBox" PasswordChanged="HasloBox_PasswordChanged"/>

            <Label Content="Potwierdz haslo:"/>
            <PasswordBox x:Name="PotwierdzHasloBox" PasswordChanged="PotwierdzHasloBox_PasswordChanged"/>

            <TextBlock Text="{Binding Komunikat}" Foreground="Red" TextWrapping="Wrap" Margin="0,0,0,10" HorizontalAlignment="Center"/>

            <Button Command="{Binding ZarejestrujCommand}" Content="Zarejestruj sie" Height="35" Margin="0,10,0,5" FontWeight="Bold"/>
            <Button Command="{Binding PowrotCommand}" Content="Powrot do logowania" Height="43" Background="Transparent" BorderBrush="Transparent" Foreground="Blue"/>
        </StackPanel>
    </Grid>
</Window>