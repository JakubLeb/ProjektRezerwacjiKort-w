<UserControl x:Class="SRKT.WPF.Views.UstawieniaPowiadomienView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F6FA" Width="459" Height="642">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="⚙️ Ustawienia powiadomień" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="#2C3E50"/>
            <TextBlock Text="Dostosuj sposób otrzymywania powiadomień" 
                      FontSize="14" 
                      Foreground="#7F8C8D" 
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Zawartość -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Sekcja: Kanały powiadomień -->
                <Border Background="White" 
                       CornerRadius="10" 
                       Padding="20" 
                       Margin="0,0,0,15"
                       BorderBrush="#DCDDE1" 
                       BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="📢 Kanały powiadomień" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="#2C3E50" 
                                  Margin="0,0,0,15"/>

                        <!-- Systemowe -->
                        <Border Background="#F8F9FA" 
                               CornerRadius="8" 
                               Padding="15" 
                               Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                       Width="45" Height="45" 
                                       CornerRadius="22" 
                                       Background="#3498DB" 
                                       Margin="0,0,15,0">
                                    <TextBlock Text="🔔" 
                                              FontSize="18" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Powiadomienia systemowe" 
                                              FontWeight="SemiBold" 
                                              FontSize="14" 
                                              Foreground="#2C3E50"/>
                                    <TextBlock Text="Powiadomienia widoczne w aplikacji" 
                                              FontSize="12" 
                                              Foreground="#7F8C8D"/>
                                </StackPanel>

                                <CheckBox Grid.Column="2" 
                                         IsChecked="{Binding SystemoweWlaczone}" 
                                         VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- Push/Toast -->
                        <Border Background="#F8F9FA" 
                               CornerRadius="8" 
                               Padding="15">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                                       Width="45" Height="45" 
                                       CornerRadius="22" 
                                       Background="#E74C3C" 
                                       Margin="0,0,15,0">
                                    <TextBlock Text="📱" 
                                              FontSize="18" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Powiadomienia Pop-up" 
                                              FontWeight="SemiBold" 
                                              FontSize="14" 
                                              Foreground="#2C3E50"/>
                                    <TextBlock Text="Wyskakujące powiadomienia Windows" 
                                              FontSize="12" 
                                              Foreground="#7F8C8D"/>
                                </StackPanel>

                                <CheckBox Grid.Column="2" 
                                         IsChecked="{Binding PushWlaczony}" 
                                         VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Sekcja: Typy powiadomień -->
                <Border Background="White" 
                       CornerRadius="10" 
                       Padding="20"
                       BorderBrush="#DCDDE1" 
                       BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="📋 Typy powiadomień" 
                                  FontSize="16" 
                                  FontWeight="Bold" 
                                  Foreground="#2C3E50" 
                                  Margin="0,0,0,15"/>

                        <CheckBox Content="Nowe rezerwacje" 
                                 IsChecked="{Binding PowiadamiajONoweRezerwacje}" 
                                 Margin="0,0,0,10"/>

                        <CheckBox Content="Zmiany statusu rezerwacji" 
                                 IsChecked="{Binding PowiadamiajOZmianyStatusu}" 
                                 Margin="0,0,0,10"/>

                        <CheckBox Content="Przypomnienia przed rezerwacją" 
                                 IsChecked="{Binding PowiadamiajPrzypomnienia}" 
                                 Margin="0,0,0,10"/>

                        <CheckBox Content="Płatności i faktury" 
                                 IsChecked="{Binding PowiadamiajOPlatnosciach}" 
                                 Margin="0,0,0,10"/>

                        <CheckBox Content="Promocje i oferty specjalne" 
                                 IsChecked="{Binding PowiadamiajOPromocjach}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Przyciski -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Center" 
                   Margin="0,15,0,0">
            <Button Content="🔔 Testuj powiadomienie" 
                   Command="{Binding TestujPowiadomienieCommand}"
                   Background="#F39C12" 
                   Foreground="White" 
                   FontWeight="Bold"
                   Height="40" 
                   Padding="20,0"
                   Margin="0,0,10,0"
                   Cursor="Hand"/>

            <Button Content="💾 Zapisz ustawienia" 
                   Command="{Binding ZapiszCommand}"
                   Background="#27AE60" 
                   Foreground="White" 
                   FontWeight="Bold"
                   Height="40" 
                   Padding="20,0"
                   Cursor="Hand"/>
        </StackPanel>
    </Grid>
</UserControl>
