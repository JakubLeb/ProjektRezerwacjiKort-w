<Window x:Class="SRKT.WPF.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Administratora SRKT" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F5F7FA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#2C3E50" Grid.Column="0">
            <StackPanel Margin="10">
                <TextBlock Text="SRKT ADMIN" 
                          Foreground="White" 
                          FontSize="28" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,20"/>

                <TextBlock Text="{Binding AktualnyAdministrator.Imie, StringFormat='Witaj, {0}!'}" 
                           Foreground="#BDC3C7" 
                           FontSize="16" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"/>

                <Rectangle Height="1" Fill="#34495E" Margin="0,0,0,10"/>

                <Button Content="📊 Przegląd Dnia" 
                       Command="{Binding PokazDashboardCommand}" 
                        Height="45" 
                        Margin="0,5" 
                        Background="#34495E" 
                        Foreground="White" 
                        BorderThickness="0"
                        FontSize="14"
                        HorizontalContentAlignment="Left"
                        Padding="15,0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5" 
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3498DB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="📅 Kalendarz" 
                       Command="{Binding PokazKalendarzCommand}" 
                        Height="45" 
                        Margin="0,5" 
                        Background="#34495E" 
                        Foreground="White" 
                        BorderThickness="0"
                        FontSize="14"
                        HorizontalContentAlignment="Left"
                        Padding="15,0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5" 
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3498DB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="👥 Użytkownicy" 
                       Command="{Binding PokazUzytkownikowCommand}" 
                        Height="45" 
                        Margin="0,5" 
                        Background="#34495E" 
                        Foreground="White" 
                        BorderThickness="0"
                        FontSize="14"
                        HorizontalContentAlignment="Left"
                        Padding="15,0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5" 
                                               Padding="{TemplateBinding Padding}">
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3498DB"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Rectangle Height="1" Fill="#34495E" Margin="0,20,0,10"/>

                <Button Content="🚪 Wyloguj" 
                       Command="{Binding WylogujCommand}" 
                        Height="45" 
                        Margin="0,5" 
                        Background="#E74C3C" 
                        Foreground="White" 
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="Bold"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                               CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#C0392B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>

        <ContentControl Grid.Column="1" 
                       Content="{Binding AktualnyWidok}" 
                       Margin="0"/>
    </Grid>
</Window>
