<Window x:Class="SRKT.WPF.Views.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panel Administratora SRKT" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F5F7FA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Background="#2C3E50" Grid.Column="0">
            <StackPanel Margin="10">
                <TextBlock Text="SRKT ADMIN" Foreground="White" FontSize="28" 
                           FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,40"/>
                
                <TextBlock Text="{Binding AktualnyAdministrator.Imie, StringFormat='Witaj, {0}!'}" 
                           Foreground="#BDC3C7" FontSize="16" 
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <Button Content="Przegląd Dnia" Command="{Binding PokazDashboardCommand}" 
                        Height="40" Margin="0,5" Background="Transparent" Foreground="White" BorderThickness="0"/>

                <Button Content="Użytkownicy" Command="{Binding PokazUzytkownikowCommand}" 
                        Height="40" Margin="0,5" Background="Transparent" Foreground="White" BorderThickness="0"/>

                <Button Content="Wyloguj" Command="{Binding WylogujCommand}" 
                        Height="40" Margin="0,20,0,0" Background="#E74C3C" Foreground="White"/>
            </StackPanel>
        </Border>

        <ContentControl Grid.Column="1" Content="{Binding AktualnyWidok}" Margin="20"/>
    </Grid>
</Window>