<UserControl x:Class="SRKT.WPF.Views.AdminCalendarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F6FA">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" CornerRadius="15" Padding="15" Margin="0,0,20,0" BorderBrush="#DCDDE1" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Wybierz termin" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Foreground="#2C3E50"/>
                <Calendar SelectedDate="{Binding WybranaData, Mode=TwoWay}" BorderThickness="0" HorizontalAlignment="Center"/>

                <Separator Margin="0,20" Background="#F0F2F5"/>

                <TextBlock Text="Szybkie Akcje" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <Button Content="Dodaj Rezerwację" Style="{StaticResource PrimaryButtonStyle}" Height="35" Margin="0,5"/>
                <Button Content="Drukuj Grafik" Background="#95A5A6" Foreground="White" Height="35" BorderThickness="0" Margin="0,5"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="White" CornerRadius="15" BorderBrush="#DCDDE1" BorderThickness="1">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding WybranaData, StringFormat=Rezerwacje na dzień: dd.MM.yyyy}" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

                <DataGrid Grid.Row="1" ItemsSource="{Binding DzisiejszeRezerwacje}" AutoGenerateColumns="False" Background="Transparent" BorderThickness="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Godzina" Binding="{Binding GodzinaRozpoczecia}" Width="80"/>
                        <DataGridTextColumn Header="Kort" Binding="{Binding KortId}" Width="60"/>
                        <DataGridTextColumn Header="Klient" Binding="{Binding UzytkownikId}" Width="*"/>
                        <DataGridTemplateColumn Header="Akcje" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Usuń" Background="#E74C3C" Foreground="White" BorderThickness="0" Padding="5,2"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>