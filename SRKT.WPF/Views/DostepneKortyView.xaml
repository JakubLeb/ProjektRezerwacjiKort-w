<UserControl x:Class="SRKT.WPF.Views.DostepneKortyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:SRKT.WPF.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" 
                Background="#3498DB" 
                Padding="20" 
                CornerRadius="5" 
                Margin="0,0,0,20">
            <TextBlock Text="Dostępne korty" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="5" 
                    Padding="15"
                    Margin="0,0,10,0"
                    VerticalAlignment="Top">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Opcje wyszukiwania" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>

                    <TextBlock Text="Wybierz kort:" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Korty}" 
                              SelectedItem="{Binding WybranyKort}"
                              DisplayMemberPath="Nazwa"
                              Padding="5"
                              Margin="0,0,0,15"/>

                    <TextBlock Text="Data:" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding WybranaData, Mode=TwoWay}" 
                                Padding="5"
                                Margin="0,0,0,15"/>

                    <Button Content="Szukaj Terminów" 
                            Command="{Binding SzukajTerminowCommand}" 
                            Background="#3498DB" 
                            Foreground="White" 
                            Height="40" 
                            FontWeight="Bold"
                            Cursor="Hand"
                            Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="5" 
                    Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                               Text="Dostępne terminy:" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="0,0,0,15"/>

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding DostepneTerminy}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#BDC3C7" 
                                            BorderThickness="1" 
                                            CornerRadius="5" 
                                            Padding="15" 
                                            Margin="0,0,10,10"
                                            Background="#F9F9F9">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock FontSize="16" FontWeight="Bold" Foreground="#2C3E50">
                                                    <Run Text="{Binding Start, StringFormat=HH:mm}"/>
                                                    <Run Text=" - "/>
                                                    <Run Text="{Binding End, StringFormat=HH:mm}"/>
                                                </TextBlock>

                                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                    <TextBlock Text="Status: " Foreground="Gray"/>
                                                    <TextBlock Text="{Binding Dostepny, Converter={StaticResource BoolToStatusConverter}}" 
                                                               FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </StackPanel>

                                            <Button Grid.Column="1" 
                                                    Content="Rezerwuj" 
                                                    Command="{Binding DataContext.RezerwujCommand, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                                                    CommandParameter="{Binding}"
                                                    Background="#27AE60" 
                                                    Foreground="White" 
                                                    Padding="15,5"
                                                    FontWeight="Bold"
                                                    BorderThickness="0"
                                                    IsEnabled="{Binding Dostepny}">
                                                <Button.Style>
                                                    <Style TargetType="Button">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter Property="Background" Value="#95A5A6"/>
                                                                <Setter Property="Content" Value="Zajęte"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <TextBlock Grid.Row="1" 
                               Text="Brak dostępnych terminów dla wybranych kryteriów."
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="{Binding DostepneTerminy.Count, Converter={StaticResource BoolToStatusConverter}, FallbackValue=Hidden}"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>