<UserControl x:Class="SRKT.WPF.Views.DostepneKortyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:SRKT.WPF.Converters">

    <UserControl.Resources>
        <converters:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
    </UserControl.Resources>

    <Grid Background="#ECF0F1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" Margin="10" CornerRadius="5" Padding="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Filtry" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Foreground="#2C3E50"/>

                    <TextBlock Text="Data:" FontWeight="SemiBold" Foreground="#34495E"/>
                    <DatePicker SelectedDate="{Binding WybranaData}" Margin="0,0,0,5" Padding="2"/>

                    <TextBlock Text="Czas gry (h):" FontWeight="SemiBold" Foreground="#34495E"/>
                    <ComboBox ItemsSource="{Binding DostepneDlugosciSesji}" SelectedItem="{Binding WybranaDlugoscSesji}" Margin="0,0,0,5" Padding="2"/>

                    <TextBlock Text="Godziny:" FontWeight="SemiBold" Foreground="#34495E"/>
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Text="{Binding GodzinaOd}" HorizontalContentAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="-" Margin="5,0" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="2" Text="{Binding GodzinaDo}" HorizontalContentAlignment="Center"/>
                    </Grid>

                    <Separator Margin="0,10"/>

                    <TextBlock Text="Obiekt:" FontWeight="SemiBold" Foreground="#34495E"/>
                    <ComboBox ItemsSource="{Binding DostepneObiekty}" SelectedItem="{Binding WybranyObiektFiltr}" DisplayMemberPath="Nazwa" Margin="0,0,0,5"/>

                    <TextBlock Text="Nawierzchnia:" FontWeight="SemiBold" Margin="0,5,0,0" Foreground="#34495E"/>
                    <ComboBox ItemsSource="{Binding DostepneTypyKortu}" SelectedItem="{Binding WybranyTypKortuFiltr}" DisplayMemberPath="Nazwa" Margin="0,0,0,5"/>

                    <TextBlock Text="Kort:" FontWeight="SemiBold" Margin="0,5,0,0" Foreground="#34495E"/>
                    <ComboBox ItemsSource="{Binding Korty}" SelectedItem="{Binding WybranyKort}" DisplayMemberPath="Nazwa" Margin="0,0,0,10"/>

                    <Button Content="↺ Reset" Command="{Binding ResetujFiltryCommand}" 
                            HorizontalAlignment="Stretch" Margin="0,0,0,10" Background="Transparent" 
                            BorderBrush="#E74C3C" BorderThickness="1" Foreground="#E74C3C" FontWeight="Bold" Cursor="Hand" Height="25"/>

                    <Button Content="ODŚWIEŻ" Command="{Binding SzukajTerminowCommand}" 
                            Background="#2980B9" Foreground="White" Height="40" FontWeight="Bold" Cursor="Hand"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Border Grid.Column="1" Background="White" Margin="0,10,10,10" CornerRadius="5" Padding="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="Dostępne terminy" FontSize="20" FontWeight="Bold" Foreground="#2C3E50"/>
                    <TextBlock Text="{Binding DostepneTerminy.Count, StringFormat='Znaleziono: {0}'}" Foreground="#7F8C8D" FontSize="12"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Padding="0,0,5,0">
                    <ItemsControl ItemsSource="{Binding DostepneTerminy}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,10" CornerRadius="5" Background="White" BorderBrush="#ECF0F1" BorderThickness="1">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.1"/>
                                    </Border.Effect>

                                    <Grid Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" CornerRadius="4" ClipToBounds="True" Height="70" VerticalAlignment="Top">
                                            <Image Source="{Binding ZdjecieSciezka}" Stretch="UniformToFill"/>
                                        </Border>

                                        <Border Grid.Column="1" Background="#3498DB" CornerRadius="4" Margin="5,0,0,0" Height="70" VerticalAlignment="Top">
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="{Binding GodzinaStart}" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14"/>
                                                <TextBlock Text="-" Foreground="White" Opacity="0.7" HorizontalAlignment="Center" FontSize="10"/>
                                                <TextBlock Text="{Binding GodzinaKoniec}" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" FontSize="14"/>
                                            </StackPanel>
                                        </Border>

                                        <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="10,0">
                                            <TextBlock Text="{Binding Opis}" FontSize="14" FontWeight="Bold" Foreground="#2C3E50" TextWrapping="Wrap"/>

                                            <TextBlock Text="{Binding NazwaObiektu}" Foreground="#34495E" FontSize="11" FontWeight="SemiBold" Margin="0,2,0,0" TextWrapping="Wrap"/>

                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="📍 " FontSize="10"/>
                                                <TextBlock Text="{Binding AdresObiektu}" Foreground="#7F8C8D" FontSize="10" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <Button Grid.Column="3" 
                                                Command="{Binding DataContext.OtworzMapeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding LinkDoMapy}"
                                                ToolTip="Pokaż na mapie"
                                                Background="Green" BorderThickness="1" BorderBrush="#BDC3C7"
                                                Margin="5,0" Width="80" Height="35" Cursor="Hand" VerticalAlignment="Center">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="17"/>
                                                </Style>
                                            </Button.Resources>
                                            <TextBlock Text="Mapa" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Button>

                                        <Button Grid.Column="4" Content="REZERWUJ" 
                                                Command="{Binding DataContext.RezerwujCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Background="#27AE60" Foreground="White" FontWeight="Bold" BorderThickness="0" 
                                                Height="35" Padding="10,0" MinWidth="80" Cursor="Hand" VerticalAlignment="Center">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="4"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>

                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <TextBlock Grid.Row="1" Text="Brak wolnych terminów." VerticalAlignment="Center" HorizontalAlignment="Center" 
                           Foreground="#95A5A6" FontSize="16"
                           Visibility="{Binding DostepneTerminy.Count, Converter={StaticResource BoolToStatusConverter}, FallbackValue=Collapsed}"/>

                <Button Grid.Row="2" Margin="0,10,0,0" Height="40" 
                        Command="{Binding OtworzMapeZbiorczaCommand}"
                        Background="#34495E" Foreground="White" FontSize="12" FontWeight="Bold" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🗺️ MAPA OBIEKTÓW" Margin="0,0,5,0"/>
                    </StackPanel>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>