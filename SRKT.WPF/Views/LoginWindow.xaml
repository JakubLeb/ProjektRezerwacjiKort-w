<Window x:Class="SRKT.WPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Rezerwacji Kortów Tenisowych - Logowanie" 
        Height="500" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="#ECF0F1">
        <Border Width="380" 
               Height="420" 
               Background="White" 
               CornerRadius="10" 
               VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" 
                                 ShadowDepth="3" 
                                 Opacity="0.3"/>
            </Border.Effect>

            <StackPanel Margin="40">
                <!-- Logo i tytuł -->
                <TextBlock Text="System Rezerwacji Kortów Tenisowych (SRKT)" 
                          FontSize="18" 
                          FontWeight="Bold" 
                          HorizontalAlignment="Center" 
                          Foreground="#2C3E50" 
                          TextWrapping="Wrap"
                          TextAlignment="Center"
                          Margin="0,0,0,10"/>

                <Border Height="2" 
                       Background="#3498DB" 
                       Margin="0,0,0,30"/>

                <TextBlock Text="Ekran logowania" 
                          FontSize="14" 
                          HorizontalAlignment="Center" 
                          Foreground="#7F8C8D" 
                          Margin="0,0,0,30"/>

                <!-- Email -->
                <TextBlock Text="Email:" 
                          Foreground="#2C3E50" 
                          FontSize="14" 
                          Margin="0,0,0,5"/>
                <TextBox x:Name="EmailTextBox" 
                        Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                        Height="35" 
                        Padding="10,8" 
                        FontSize="14" 
                        Margin="0,0,0,15"/>

                <!-- Hasło -->
                <TextBlock Text="Hasło:" 
                          Foreground="#2C3E50" 
                          FontSize="14" 
                          Margin="0,0,0,5"/>
                <PasswordBox x:Name="HasloPasswordBox" 
                            Height="35" 
                            Padding="10,8" 
                            FontSize="14" 
                            Margin="0,0,0,10"
                            PasswordChanged="HasloPasswordBox_PasswordChanged"/>

                <!-- Komunikat o błędzie -->
                <TextBlock Text="{Binding Komunikat}" 
                          Foreground="#E74C3C" 
                          FontSize="12" 
                          TextWrapping="Wrap" 
                          Margin="0,0,0,15" 
                          HorizontalAlignment="Center"/>

                <!-- Przyciski -->
                <Button Content="[ Zaloguj się ]" 
                       Command="{Binding ZalogujCommand}" 
                       Height="40" 
                       Background="#3498DB" 
                       Foreground="White" 
                       FontSize="14" 
                       FontWeight="Bold" 
                       Margin="0,5" 
                       Cursor="Hand"/>

                <Button Content="[ Zarejestruj się ]" 
                       Command="{Binding ZarejestrujCommand}" 
                       Height="35" 
                       Background="Transparent" 
                       Foreground="#3498DB" 
                       FontSize="13" 
                       BorderThickness="0" 
                       Margin="0,10,0,0" 
                       Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>