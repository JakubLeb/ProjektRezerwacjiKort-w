<UserControl x:Class="SRKT.WPF.Views.PrzypomnieniView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#F5F6FA">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="⏰ " FontSize="28"/>
                <TextBlock Text="Moje Przypomnienia" 
                          FontSize="28" 
                          FontWeight="ExtraBold" 
                          Foreground="#2C3E50"/>
            </StackPanel>
            <TextBlock Text="Zarządzaj przypomnieniami o nadchodzących rezerwacjach" 
                      FontSize="14" 
                      Foreground="#7F8C8D" 
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Pasek akcji -->
        <Border Grid.Row="1" 
               Background="White" 
               CornerRadius="10" 
               Padding="15" 
               Margin="0,0,0,15"
               BorderBrush="#DCDDE1" 
               BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Liczniki -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#3498DB" 
                           CornerRadius="12" 
                           Padding="12,6" 
                           Margin="0,0,10,0">
                        <TextBlock Text="{Binding LiczbaAktywnych, StringFormat='{}{0} aktywnych'}" 
                                  Foreground="White" 
                                  FontWeight="Bold" 
                                  FontSize="12"/>
                    </Border>
                    <TextBlock Text="{Binding Przypomnienia.Count, StringFormat='Wszystkich: {0}'}" 
                              Foreground="#7F8C8D" 
                              VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Filtr -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                    <RadioButton Content="Wszystkie" 
                                IsChecked="{Binding FiltrWszystkie}" 
                                GroupName="Filtr"
                                Margin="0,0,15,0"/>
                    <RadioButton Content="Aktywne" 
                                IsChecked="{Binding FiltrAktywne}" 
                                GroupName="Filtr"
                                Margin="0,0,15,0"/>
                    <RadioButton Content="Wysłane" 
                                IsChecked="{Binding FiltrWyslane}" 
                                GroupName="Filtr"/>
                </StackPanel>

                <!-- Przycisk dodaj -->
                <Button Grid.Column="2" 
                       Content="➕ Dodaj przypomnienie" 
                       Command="{Binding DodajPrzypomnienieCommand}"
                       Background="#27AE60" 
                       Foreground="White" 
                       FontWeight="Bold"
                       Height="35" 
                       Padding="15,0"
                       Margin="0,0,10,0"
                       Cursor="Hand"/>

                <Button Grid.Column="3" 
                       Content="🔄 Odśwież" 
                       Command="{Binding OdswiezCommand}"
                       Background="#3498DB" 
                       Foreground="White" 
                       FontWeight="Bold"
                       Height="35" 
                       Padding="15,0"
                       Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Lista przypomnień -->
        <Border Grid.Row="2" 
               Background="White" 
               CornerRadius="10" 
               BorderBrush="#DCDDE1" 
               BorderThickness="1">
            <Grid>
                <!-- Lista -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                    <ItemsControl ItemsSource="{Binding PrzypomnieniFiltrowane}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0,0,0,10" 
                                       CornerRadius="8" 
                                       BorderBrush="#EEEEEE" 
                                       BorderThickness="1"
                                       Padding="15">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="White"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding CzyWyslane}" Value="True">
                                                    <Setter Property="Background" Value="#F8F9FA"/>
                                                    <Setter Property="Opacity" Value="0.7"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding CzyAktywne}" Value="False">
                                                    <Setter Property="Background" Value="#FADBD8"/>
                                                    <Setter Property="Opacity" Value="0.6"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Ikona i czas -->
                                        <StackPanel Grid.Column="0" Margin="0,0,15,0" VerticalAlignment="Center">
                                            <Border Width="50" Height="50" 
                                                   CornerRadius="25" 
                                                   Margin="0,0,0,5">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#3498DB"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding CzyWyslane}" Value="True">
                                                                <Setter Property="Background" Value="#27AE60"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding CzyAktywne}" Value="False">
                                                                <Setter Property="Background" Value="#95A5A6"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock FontSize="22" 
                                                          HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="⏰"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding CzyWyslane}" Value="True">
                                                                    <Setter Property="Text" Value="✓"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding CzyAktywne}" Value="False">
                                                                    <Setter Property="Text" Value="✕"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                            <TextBlock Text="{Binding DataPrzypomnienia, StringFormat='HH:mm'}" 
                                                      FontWeight="Bold" 
                                                      FontSize="14"
                                                      HorizontalAlignment="Center"
                                                      Foreground="#2C3E50"/>
                                            <TextBlock Text="{Binding DataPrzypomnienia, StringFormat='dd.MM'}" 
                                                      FontSize="11"
                                                      HorizontalAlignment="Center"
                                                      Foreground="#7F8C8D"/>
                                        </StackPanel>

                                        <!-- Treść -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Tytul}" 
                                                      FontWeight="Bold" 
                                                      FontSize="14" 
                                                      Foreground="#2C3E50"
                                                      TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{Binding Tresc}" 
                                                      FontSize="12" 
                                                      Foreground="#7F8C8D"
                                                      TextWrapping="Wrap"
                                                      TextTrimming="CharacterEllipsis"
                                                      MaxHeight="40"
                                                      Margin="0,4,0,0"/>
                                            
                                            <!-- Status badge -->
                                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                                <Border CornerRadius="10" Padding="8,3" Margin="0,0,8,0">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#EBF5FB"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding CzyWyslane}" Value="True">
                                                                    <Setter Property="Background" Value="#D5F4E6"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding CzyAktywne}" Value="False">
                                                                    <Setter Property="Background" Value="#FADBD8"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding StatusTekst}" 
                                                              FontSize="10" 
                                                              FontWeight="SemiBold">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="#3498DB"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding CzyWyslane}" Value="True">
                                                                        <Setter Property="Foreground" Value="#27AE60"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding CzyAktywne}" Value="False">
                                                                        <Setter Property="Foreground" Value="#E74C3C"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Border>
                                                
                                                <TextBlock Text="{Binding DataUtworzenia, StringFormat='Utworzono: {0:dd.MM.yyyy}'}" 
                                                          FontSize="10" 
                                                          Foreground="#95A5A6"
                                                          VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Przyciski akcji -->
                                        <StackPanel Grid.Column="2" 
                                                   Orientation="Horizontal" 
                                                   VerticalAlignment="Center"
                                                   Margin="10,0"
                                                   Visibility="{Binding MoznaEdytowac, Converter={StaticResource BoolToVis}}">
                                            
                                            <Button Content="✏️" 
                                                   Command="{Binding DataContext.EdytujPrzypomnienieCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding}"
                                                   ToolTip="Edytuj"
                                                   Width="50" Height="35"
                                                   Background="#3498DB"
                                                   Foreground="White"
                                                   Margin="0,0,5,0"
                                                   Cursor="Hand"/>

                                            <Button Content="🚫" 
                                                   Command="{Binding DataContext.AnulujPrzypomnienieCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding}"
                                                   ToolTip="Anuluj"
                                                   Width="50" Height="35"
                                                   Background="#E67E22"
                                                   Foreground="White"
                                                   Cursor="Hand"/>
                                        </StackPanel>

                                        <!-- Przycisk usuń -->
                                        <Button Grid.Column="3" 
                                               Content="🗑️" 
                                               Command="{Binding DataContext.UsunPrzypomnienieCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               CommandParameter="{Binding}"
                                               ToolTip="Usuń"
                                               Width="50" Height="35"
                                               Background="Transparent"
                                               Foreground="#E74C3C"
                                               Cursor="Hand"
                                               VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Komunikat gdy brak przypomnień -->
                <StackPanel VerticalAlignment="Center" 
                           HorizontalAlignment="Center"
                           Visibility="{Binding BrakPrzypomnieŋ, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="⏰" 
                              FontSize="48" 
                              HorizontalAlignment="Center" 
                              Margin="0,0,0,10"/>
                    <TextBlock Text="Brak przypomnień" 
                              FontSize="18" 
                              Foreground="#95A5A6" 
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Dodaj przypomnienie do swoich rezerwacji" 
                              FontSize="13" 
                              Foreground="#BDC3C7" 
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
