<Window x:Class="SRKT.WPF.Views.BlikPaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Płatność BLIK" 
        Height="350" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F6FA">

    <Grid Margin="20">
        <!-- Widok wprowadzania kodu - widoczny gdy NIE przetwarzamy -->
        <StackPanel x:Name="PanelWprowadzania" 
                    Visibility="{Binding WidocznoscFormularza}">

            <Border Background="#E74C3C" CornerRadius="10" Padding="15" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="BLIK" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="White" 
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding Kwota, StringFormat='Do zapłaty: {0:N2} PLN'}" 
                              FontSize="16" 
                              Foreground="White" 
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <TextBlock Text="Wprowadź 6-cyfrowy kod BLIK:" 
                      FontSize="14" 
                      FontWeight="SemiBold"
                      Margin="0,0,0,10"
                      HorizontalAlignment="Center"/>

            <TextBox x:Name="KodBlikTextBox"
                    Text="{Binding KodBlik, UpdateSourceTrigger=PropertyChanged}" 
                    FontSize="28" 
                    FontWeight="Bold"
                    MaxLength="6"
                    HorizontalContentAlignment="Center"
                    Padding="10"
                    Margin="0,0,0,10"/>

            <TextBlock Text="{Binding Komunikat}" 
                      Foreground="#E74C3C" 
                      FontSize="12"
                      HorizontalAlignment="Center"
                      Margin="0,0,0,15"
                      TextWrapping="Wrap"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Anuluj" 
                       Command="{Binding AnulujCommand}"
                       Width="100" 
                       Height="40" 
                       Margin="0,0,10,0"
                       Background="#95A5A6"
                       Foreground="White"
                       Cursor="Hand"/>

                <Button Content="Zapłać" 
                       Command="{Binding ZaplacCommand}"
                       Width="120" 
                       Height="40"
                       Background="#27AE60"
                       Foreground="White"
                       FontWeight="Bold"
                       Cursor="Hand"/>
            </StackPanel>
        </StackPanel>

        <!-- Widok przetwarzania - widoczny gdy przetwarzamy -->
        <StackPanel x:Name="PanelPrzetwarzania" 
                    VerticalAlignment="Center"
                    Visibility="{Binding WidocznoscPrzetwarzania}">

            <TextBlock Text="⏳" 
                      FontSize="48" 
                      HorizontalAlignment="Center"
                      Margin="0,0,0,20"/>

            <TextBlock Text="Przetwarzanie płatności..." 
                      FontSize="18" 
                      FontWeight="SemiBold"
                      HorizontalAlignment="Center"
                      Foreground="#2C3E50"/>

            <TextBlock Text="Proszę czekać i zatwierdzić transakcję w aplikacji bankowej" 
                      FontSize="12" 
                      Foreground="#7F8C8D"
                      HorizontalAlignment="Center"
                      TextWrapping="Wrap"
                      TextAlignment="Center"
                      Margin="0,10,0,0"/>

            <ProgressBar IsIndeterminate="True" 
                        Height="5" 
                        Margin="20,20,20,0"
                        Foreground="#3498DB"/>
        </StackPanel>
    </Grid>
</Window>