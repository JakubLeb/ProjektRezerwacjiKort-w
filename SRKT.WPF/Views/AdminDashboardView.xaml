<UserControl x:Class="SRKT.WPF.Views.AdminDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="1000"
             Background="#F5F6FA">
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Panel Administratora" FontSize="14" Foreground="#7F8C8D" FontWeight="SemiBold"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Przegląd Dnia: " FontSize="28" FontWeight="ExtraBold" Foreground="#2C3E50"/>
                <TextBlock Text="{Binding DzisiejszaData, StringFormat=dd.MM.yyyy}" FontSize="28" FontWeight="ExtraBold" Foreground="#3498DB"/>
            </StackPanel>
        </StackPanel>

        <UniformGrid Grid.Row="1" Columns="3" Margin="0,0,0,25">
            <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,10,0" BorderBrush="#DCDDE1" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Wszystkie Rezerwacje" Foreground="#7F8C8D" FontSize="12" FontWeight="Bold"/>
                    <TextBlock Text="{Binding DzisiejszeRezerwacje.Count}" FontSize="24" FontWeight="Bold" Foreground="#2C3E50" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="10" Padding="20" Margin="5,0,5,0" BorderBrush="#DCDDE1" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Opłacone" Foreground="#7F8C8D" FontSize="12" FontWeight="Bold"/>
                    <TextBlock Text="{Binding LiczbaOplaconych}" FontSize="24" FontWeight="Bold" Foreground="#27AE60" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="10" Padding="20" Margin="10,0,0,0" BorderBrush="#DCDDE1" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Do zapłaty" Foreground="#7F8C8D" FontSize="12" FontWeight="Bold"/>
                    <TextBlock Text="{Binding LiczbaNieoplaconych}" FontSize="24" FontWeight="Bold" Foreground="#E67E22" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <Border Grid.Row="2" Background="White" CornerRadius="10" BorderBrush="#DCDDE1" BorderThickness="1">
            <DataGrid ItemsSource="{Binding DzisiejszeRezerwacje}" 
                      AutoGenerateColumns="False" IsReadOnly="True"
                      Background="Transparent" BorderThickness="0" RowHeight="55"
                      GridLinesVisibility="Horizontal" CanUserAddRows="False"
                      HorizontalGridLinesBrush="#EEEEEE"
                      HeadersVisibility="Column">
                <DataGrid.Columns>
                    <!-- Godziny: od - do -->
                    <DataGridTemplateColumn Header="Godziny" Width="130">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                                    <TextBlock Text="{Binding DataRezerwacji, StringFormat=HH:mm}" 
                                              FontWeight="Bold" Foreground="#2C3E50" FontSize="14"/>
                                    <TextBlock Text=" - " Foreground="#7F8C8D" FontSize="14"/>
                                    <TextBlock Text="{Binding DataZakonczenia, StringFormat=HH:mm}" 
                                              FontWeight="Bold" Foreground="#2C3E50" FontSize="14"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Czas trwania -->
                    <DataGridTemplateColumn Header="Czas" Width="70">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Background="#ECF0F1" CornerRadius="10" Padding="8,4" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock VerticalAlignment="Center">
                                        <Run Text="{Binding IloscGodzin, StringFormat={}{0:0.#}}" FontWeight="Bold" Foreground="#2C3E50"/>
                                        <Run Text="h" Foreground="#7F8C8D"/>
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Kort i obiekt -->
                    <DataGridTemplateColumn Header="Kort / Obiekt" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel VerticalAlignment="Center" Margin="10,0">
                                    <TextBlock Text="{Binding Kort.Nazwa, FallbackValue='Brak danych'}" 
                                              FontWeight="SemiBold" Foreground="#2C3E50" FontSize="13"/>
                                    <TextBlock Text="{Binding Kort.ObiektSportowy.Nazwa, FallbackValue=''}" 
                                              Foreground="#7F8C8D" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Klient: imię, nazwisko, email -->
                    <DataGridTemplateColumn Header="Klient" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel VerticalAlignment="Center" Margin="10,0">
                                    <TextBlock Text="{Binding Uzytkownik.PelneImieNazwisko, FallbackValue='Nieznany klient'}" 
                                              FontWeight="SemiBold" Foreground="#2C3E50" FontSize="13"/>
                                    <TextBlock Text="{Binding Uzytkownik.Email, FallbackValue=''}" 
                                              Foreground="#7F8C8D" FontSize="11" TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Kwota -->
                    <DataGridTemplateColumn Header="Kwota" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding KosztCalkowity, StringFormat={}{0:N2} zł}" 
                                          VerticalAlignment="Center" Margin="10,0"
                                          FontWeight="Bold" Foreground="#2C3E50" FontSize="13"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Status płatności -->
                    <DataGridTemplateColumn Header="Płatność" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border x:Name="StatusBadge" CornerRadius="12" Padding="12,6" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock x:Name="StatusText" Foreground="White" FontSize="11" FontWeight="Bold"/>
                                </Border>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding CzyOplacona}" Value="True">
                                        <Setter TargetName="StatusBadge" Property="Background" Value="#27AE60"/>
                                        <Setter TargetName="StatusText" Property="Text" Value="OPŁACONO"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CzyOplacona}" Value="False">
                                        <Setter TargetName="StatusBadge" Property="Background" Value="#E67E22"/>
                                        <Setter TargetName="StatusText" Property="Text" Value="DO ZAPŁATY"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Status rezerwacji -->
                    <DataGridTemplateColumn Header="Status" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border x:Name="RezBadge" CornerRadius="12" Padding="10,6" 
                                       HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding StatusRezerwacji.Nazwa, FallbackValue='?'}" 
                                              Foreground="White" FontSize="10" FontWeight="Bold"/>
                                </Border>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding StatusRezerwacjiId}" Value="1">
                                        <Setter TargetName="RezBadge" Property="Background" Value="#F39C12"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusRezerwacjiId}" Value="2">
                                        <Setter TargetName="RezBadge" Property="Background" Value="#3498DB"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusRezerwacjiId}" Value="3">
                                        <Setter TargetName="RezBadge" Property="Background" Value="#95A5A6"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding StatusRezerwacjiId}" Value="4">
                                        <Setter TargetName="RezBadge" Property="Background" Value="#27AE60"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
