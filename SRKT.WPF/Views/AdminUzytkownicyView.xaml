<UserControl x:Class="SRKT.WPF.Views.AdminUzytkownicyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900"
             Background="#F5F6FA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Zarządzanie Użytkownikami" 
                      FontSize="28" 
                      FontWeight="ExtraBold" 
                      Foreground="#2C3E50"/>
            <TextBlock Text="Przeglądaj, edytuj i zarządzaj kontami użytkowników systemu" 
                      FontSize="14" 
                      Foreground="#7F8C8D" 
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Panel wyszukiwania i statystyk -->
        <Border Grid.Row="1" 
               Background="White" 
               CornerRadius="10" 
               Padding="20" 
               Margin="0,0,0,15"
               BorderBrush="#DCDDE1" 
               BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Wyszukiwarka -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="Szukaj użytkownika:" 
                              Foreground="#7F8C8D" 
                              FontSize="12" 
                              FontWeight="Bold" 
                              Margin="0,0,0,5"/>
                    <TextBox Text="{Binding FrazaWyszukiwania, UpdateSourceTrigger=PropertyChanged}"
                            Height="35"
                            FontSize="14"
                            Padding="10,8"
                            VerticalContentAlignment="Center"/>
                </StackPanel>

                <!-- Filtr roli -->
                <StackPanel Grid.Column="1" Margin="0,0,20,0">
                    <TextBlock Text="Rola:" 
                              Foreground="#7F8C8D" 
                              FontSize="12" 
                              FontWeight="Bold" 
                              Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding DostepneRole}" 
                             SelectedItem="{Binding WybranaRolaFiltr}"
                             DisplayMemberPath="Nazwa"
                             Height="35"
                             Width="150"
                             FontSize="14"/>
                </StackPanel>

                <!-- Statystyki -->
                <Border Grid.Column="2" 
                       Background="#ECF0F1" 
                       CornerRadius="8" 
                       Padding="15,10" 
                       Margin="0,0,15,0"
                       VerticalAlignment="Bottom">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Łącznie: " Foreground="#7F8C8D" FontSize="12" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding LiczbaUzytkownikow}" 
                                  FontWeight="Bold" 
                                  FontSize="16" 
                                  Foreground="#2C3E50" 
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Przycisk odświeżenia -->
                <Button Grid.Column="3" 
                       Content="🔄 Odśwież" 
                       Command="{Binding OdswiezCommand}"
                       Background="#3498DB" 
                       Foreground="White" 
                       FontWeight="Bold"
                       Height="35" 
                       Padding="20,0"
                       VerticalAlignment="Bottom"
                       Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Lista użytkowników -->
        <Border Grid.Row="2" 
               Background="White" 
               CornerRadius="10" 
               BorderBrush="#DCDDE1" 
               BorderThickness="1">
            <Grid>
                <DataGrid ItemsSource="{Binding Uzytkownicy}" 
                         SelectedItem="{Binding WybranyUzytkownik}"
                         AutoGenerateColumns="False" 
                         IsReadOnly="True"
                         Background="Transparent" 
                         BorderThickness="0" 
                         RowHeight="60"
                         GridLinesVisibility="Horizontal" 
                         CanUserAddRows="False"
                         HeadersVisibility="Column"
                         HorizontalGridLinesBrush="#EEEEEE"
                         AlternatingRowBackground="#F8F9FA">

                    <DataGrid.Columns>
                        <!-- ID -->
                        <DataGridTextColumn Header="ID" 
                                          Binding="{Binding Id}" 
                                          Width="60"
                                          FontSize="13">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Margin" Value="10,0"/>
                                    <Setter Property="Foreground" Value="#7F8C8D"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Imię i Nazwisko -->
                        <DataGridTemplateColumn Header="Użytkownik" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center" Margin="10,0">
                                        <TextBlock Text="{Binding PelneImieNazwisko}" 
                                                  FontWeight="SemiBold" 
                                                  FontSize="14" 
                                                  Foreground="#2C3E50"/>
                                        <TextBlock Text="{Binding DataUtworzenia, StringFormat='Dołączył: {0:dd.MM.yyyy}'}" 
                                                  Foreground="#95A5A6" 
                                                  FontSize="11"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Email -->
                        <DataGridTemplateColumn Header="Email" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Email}" 
                                              VerticalAlignment="Center" 
                                              Margin="10,0"
                                              FontSize="13"
                                              Foreground="#34495E"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Rola -->
                        <DataGridTemplateColumn Header="Rola" Width="130">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border x:Name="RolaBadge" 
                                           CornerRadius="12" 
                                           Padding="12,6" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                        <TextBlock x:Name="RolaText" 
                                                  Text="{Binding Rola.Nazwa, FallbackValue='Brak'}"
                                                  Foreground="White" 
                                                  FontSize="11" 
                                                  FontWeight="Bold"/>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding RolaId}" Value="1">
                                            <Setter TargetName="RolaBadge" Property="Background" Value="#9B59B6"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RolaId}" Value="2">
                                            <Setter TargetName="RolaBadge" Property="Background" Value="#3498DB"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Liczba rezerwacji -->
                        <DataGridTemplateColumn Header="Rezerwacje" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="#ECF0F1" 
                                           CornerRadius="10" 
                                           Padding="10,5" 
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Rezerwacje.Count, FallbackValue='0'}" 
                                                  FontWeight="Bold" 
                                                  FontSize="13" 
                                                  Foreground="#2C3E50"
                                                  HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Akcje -->
                        <DataGridTemplateColumn Header="Akcje" Width="220">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center">
                                        <!-- Przycisk edycji -->
                                        <Button Content="✏️ Edytuj" 
                                               Command="{Binding DataContext.EdytujUzytkownikaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               CommandParameter="{Binding}"
                                               Background="#3498DB" 
                                               Foreground="White" 
                                               FontWeight="Bold"
                                               Height="32" 
                                               Padding="12,0"
                                               Margin="0,0,8,0"
                                               Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" 
                                                                       CornerRadius="5" 
                                                                       Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#2980B9"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <!-- Przycisk zmiany roli -->
                                        <Button Content="🔄 Rola" 
                                               Command="{Binding DataContext.ZmienRoleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               CommandParameter="{Binding}"
                                               Background="#9B59B6" 
                                               Foreground="White" 
                                               FontWeight="Bold"
                                               Height="32" 
                                               Padding="12,0"
                                               Margin="0,0,8,0"
                                               Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" 
                                                                       CornerRadius="5" 
                                                                       Padding="{TemplateBinding Padding}">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#8E44AD"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <!-- Przycisk usunięcia -->
                                        <Button Content="🗑️" 
                                               Command="{Binding DataContext.UsunUzytkownikaCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               CommandParameter="{Binding}"
                                               Background="#E74C3C" 
                                               Foreground="White" 
                                               FontWeight="Bold"
                                               Height="32" 
                                               Width="32"
                                               Cursor="Hand"
                                               ToolTip="Usuń użytkownika">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Background="{TemplateBinding Background}" 
                                                                       CornerRadius="5">
                                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#C0392B"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Komunikat gdy brak użytkowników -->
                <TextBlock Text="Brak użytkowników do wyświetlenia" 
                          VerticalAlignment="Center" 
                          HorizontalAlignment="Center"
                          Foreground="#95A5A6" 
                          FontSize="16"
                          Visibility="{Binding BrakUzytkownikow}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
