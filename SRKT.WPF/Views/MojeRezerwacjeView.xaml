<UserControl x:Class="SRKT.WPF.Views.MojeRezerwacjeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Grid.Row="0" 
               Background="#3498DB" 
               Padding="20" 
               CornerRadius="5" 
               Margin="0,0,0,20">
            <TextBlock Text="Moje rezerwacje" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="White"/>
        </Border>

        <!-- Lista rezerwacji -->
        <DataGrid Grid.Row="1" 
                 ItemsSource="{Binding Rezerwacje}"
                 SelectedItem="{Binding WybranaRezerwacja}"
                 AutoGenerateColumns="False"
                 IsReadOnly="True"
                 GridLinesVisibility="Horizontal"
                 HeadersVisibility="Column"
                 RowHeight="50">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Data" 
                                   Binding="{Binding DataRezerwacji, StringFormat='dd.MM.yyyy HH:mm'}"
                                   Width="150"/>
                <DataGridTextColumn Header="Kort" 
                                   Binding="{Binding Kort.PelnaNazwa}"
                                   Width="*"/>
                <DataGridTextColumn Header="Czas trwania" 
                                   Binding="{Binding IloscGodzin, StringFormat='{}{0} godzina'}"
                                   Width="120"/>
                <DataGridTextColumn Header="Koszt" 
                                   Binding="{Binding KosztCalkowity, StringFormat='{}{0} PLN'}"
                                   Width="100"/>
                <DataGridTextColumn Header="Status" 
                                   Binding="{Binding StatusRezerwacji.Nazwa}"
                                   Width="120"/>
                <DataGridTemplateColumn Header="Akcje" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="[Anuluj]" 
                                   Command="{Binding DataContext.AnulujRezerwacjeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   Background="#E74C3C" 
                                   Foreground="White" 
                                   Margin="5"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>