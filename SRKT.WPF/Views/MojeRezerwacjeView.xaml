<UserControl x:Class="SRKT.WPF.Views.MojeRezerwacjeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <Border Grid.Row="0" 
               Background="#3498DB" 
               Padding="20" 
               CornerRadius="5" 
               Margin="0,0,0,20">
            <TextBlock Text="Moje rezerwacje" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="White"/>
        </Border>

        <!-- Lista rezerwacji -->
        <DataGrid Grid.Row="1" 
                 ItemsSource="{Binding Rezerwacja}"
                 SelectedItem="{Binding WybranaRezerwacja}"
                 AutoGenerateColumns="False"
                 IsReadOnly="True"
                 GridLinesVisibility="Horizontal"
                 HeadersVisibility="Column"
                 RowHeight="50">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Data" 
                       Binding="{Binding DataRezerwacji, StringFormat='dd.MM.yyyy HH:mm', TargetNullValue='-'}"
                       Width="150"/>
                <DataGridTextColumn Header="Kort" 
                       Binding="{Binding Kort.PelnaNazwa, TargetNullValue='Brak danych'}"
                       Width="*"/>
                <DataGridTextColumn Header="Czas trwania" 
                       Binding="{Binding IloscGodzin, StringFormat='{}{0} godzin', TargetNullValue='-'}"
                       Width="120"/>
                <DataGridTextColumn Header="Koszt" 
                       Binding="{Binding KosztCalkowity, StringFormat='{}{0:F2} PLN', TargetNullValue='-'}"
                       Width="100"/>
                <DataGridTextColumn Header="Status" 
                       Binding="{Binding StatusRezerwacji.Nazwa, TargetNullValue='Nieznany'}"
                       Width="120"/>
                <DataGridTemplateColumn Header="Akcje" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Anuluj" 
                       Command="{Binding DataContext.AnulujRezerwacjeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       CommandParameter="{Binding}"
                       Background="#E74C3C" 
                       Foreground="White" 
                       Margin="5"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>