<Window x:Class="SRKT.WPF.Views.EdytujUzytkownikaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edytuj użytkownika" 
        Height="391" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F6FA">

    <Grid Margin="25">
        <StackPanel>
            <!-- Nagłówek -->
            <TextBlock Text="Edycja danych użytkownika" 
                      FontSize="20" 
                      FontWeight="Bold" 
                      Foreground="#2C3E50"
                      Margin="0,0,0,20"/>

            <!-- Imię -->
            <TextBlock Text="Imię:" 
                      FontWeight="SemiBold" 
                      Foreground="#34495E" 
                      Margin="0,0,0,5"/>
            <TextBox x:Name="ImieTextBox" 
                    Height="35" 
                    FontSize="14" 
                    Padding="10,8"
                    Margin="0,0,0,15"/>

            <!-- Nazwisko -->
            <TextBlock Text="Nazwisko:" 
                      FontWeight="SemiBold" 
                      Foreground="#34495E" 
                      Margin="0,0,0,5"/>
            <TextBox x:Name="NazwiskoTextBox" 
                    Height="35" 
                    FontSize="14" 
                    Padding="10,8"
                    Margin="0,0,0,15"/>

            <!-- Email -->
            <TextBlock Text="Email:" 
                      FontWeight="SemiBold" 
                      Foreground="#34495E" 
                      Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" 
                    Height="35" 
                    FontSize="14" 
                    Padding="10,8"
                    Margin="0,0,0,25"/>

            <!-- Przyciski -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Anuluj" 
                       Click="AnulujButton_Click"
                       Width="100" 
                       Height="38" 
                       Margin="0,0,10,0"
                       Background="#95A5A6"
                       Foreground="White"
                       FontWeight="Bold"
                       Cursor="Hand"/>

                <Button Content="Zapisz zmiany" 
                       Click="ZapiszButton_Click"
                       Width="120" 
                       Height="38"
                       Background="#27AE60"
                       Foreground="White"
                       FontWeight="Bold"
                       Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
