<Window x:Class="SRKT.WPF.Views.RezerwacjaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Potwierdzenie Rezerwacji" Height="562" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Szczegóły Rezerwacji" FontSize="20" FontWeight="Bold" Margin="0,0,0,15" HorizontalAlignment="Center"/>

            <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="{Binding NazwaObiektu}" FontWeight="Bold" FontSize="16"/>
                    <TextBlock Text="{Binding AdresObiektu}" Foreground="Gray" Margin="0,0,0,10"/>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Data:" TextTrimming="CharacterEllipsis"/>
                        <TextBlock Grid.Column="1" Text="{Binding DataRezerwacji, StringFormat=dd.MM.yyyy}" FontWeight="SemiBold"/>
                    </Grid>

                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Godziny:"/>
                        <TextBlock Grid.Column="1" Text="{Binding ZakresGodzin}" FontWeight="SemiBold"/>
                    </Grid>

                    <Separator Margin="0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="DO ZAPŁATY:" FontSize="16" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="{Binding CenaCalkowita, StringFormat={}{0:N2} PLN}" 
                                   FontSize="18" FontWeight="Bold" Foreground="#2ecc71"/>
                    </Grid>
                </StackPanel>
            </Border>
            <TextBlock Text="Uwagi do rezerwacji (opcjonalne):" Margin="0,10,0,5" FontWeight="SemiBold"/>
            <TextBox Text="{Binding Uwagi}" 
                Height="60" 
                TextWrapping="Wrap" 
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                Padding="5"
                BorderBrush="#DDDDDD"/> 
            <TextBlock Text="Metoda płatności:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <RadioButton Content="Płatność na miejscu" IsChecked="{Binding CzyPlatnoscNaMiejscu}" Margin="0,0,15,0"/>
                <RadioButton Content="BLIK" IsChecked="{Binding CzyPlatnoscBlik}"/>
            </StackPanel>

            <StackPanel Visibility="{Binding CzyPlatnoscBlik, Converter={StaticResource BoolToVis}}">
                <TextBlock Text="Wpisz kod BLIK (6 cyfr):" Margin="0,0,0,5"/>
                <TextBox Text="{Binding KodBlik, UpdateSourceTrigger=PropertyChanged}" 
                         MaxLength="6" FontSize="16" Padding="5" HorizontalContentAlignment="Center"/>
                <TextBlock Text="{Binding BlikError}" Foreground="Red" FontSize="12" Margin="0,2,0,0" 
                           Visibility="{Binding MaBlikError, Converter={StaticResource BoolToVis}}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Anuluj" Command="{Binding AnulujCommand}" Width="100" Margin="0,0,10,0" Height="40"/>
                <Button Content="Zatwierdź i Rezerwuj" Command="{Binding PotwierdzCommand}" Width="180" Height="40" Background="#3498db" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>