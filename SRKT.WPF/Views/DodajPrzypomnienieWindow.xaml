<Window x:Class="SRKT.WPF.Views.DodajPrzypomnienieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj przypomnienie" 
        Height="580" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F6FA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="⏰ Nowe przypomnienie" 
                      FontSize="22" 
                      FontWeight="Bold" 
                      Foreground="#2C3E50"/>
            <TextBlock Text="Ustaw przypomnienie dla wybranej rezerwacji" 
                      FontSize="13" 
                      Foreground="#7F8C8D" 
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Formularz -->
        <Border Grid.Row="1" 
               Background="White" 
               CornerRadius="10" 
               Padding="20"
               BorderBrush="#DCDDE1" 
               BorderThickness="1">
            <StackPanel>
                <!-- Wybór rezerwacji -->
                <TextBlock Text="Rezerwacja:" 
                          FontWeight="SemiBold" 
                          Foreground="#34495E" 
                          Margin="0,0,0,5"/>
                <ComboBox x:Name="RezerwacjaComboBox" 
                         Height="40"
                         FontSize="13"
                         Padding="10,8"
                         SelectionChanged="RezerwacjaComboBox_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding DataRezerwacji, StringFormat='dd.MM.yyyy HH:mm'}" 
                                          FontWeight="SemiBold"/>
                                <TextBlock Text=" - " Foreground="#7F8C8D"/>
                                <TextBlock Text="{Binding Kort.Nazwa}" Foreground="#7F8C8D"/>
                            </StackPanel>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Szybkie opcje czasu -->
                <TextBlock Text="Przypomnij:" 
                          FontWeight="SemiBold" 
                          Foreground="#34495E" 
                          Margin="0,15,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="Radio15min" Content="15 min przed" Margin="0,0,15,0" Checked="RadioCzas_Checked"/>
                    <RadioButton x:Name="Radio30min" Content="30 min przed" Margin="0,0,15,0" Checked="RadioCzas_Checked"/>
                    <RadioButton x:Name="Radio1h" Content="1h przed" IsChecked="True" Margin="0,0,15,0" Checked="RadioCzas_Checked"/>
                    <RadioButton x:Name="RadioCustom" Content="Własny czas" Checked="RadioCzas_Checked"/>
                </StackPanel>

                <!-- Własna data/czas -->
                <StackPanel x:Name="CustomTimePanel" Visibility="Collapsed" Margin="0,10,0,0">
                    <TextBlock Text="Data i godzina przypomnienia:" 
                              FontWeight="SemiBold" 
                              Foreground="#34495E" 
                              Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <DatePicker x:Name="DataPicker" 
                                   Height="35"
                                   Margin="0,0,10,0"/>
                        <TextBox x:Name="CzasTextBox" 
                                Grid.Column="1"
                                Text="12:00"
                                Height="35"
                                VerticalContentAlignment="Center"
                                HorizontalContentAlignment="Center"
                                FontSize="14"/>
                    </Grid>
                </StackPanel>

                <!-- Tytuł -->
                <TextBlock Text="Tytuł:" 
                          FontWeight="SemiBold" 
                          Foreground="#34495E" 
                          Margin="0,15,0,5"/>
                <TextBox x:Name="TytulTextBox" 
                        Text="Przypomnienie o rezerwacji"
                        Height="35"
                        FontSize="13"
                        Padding="10,8"/>

                <!-- Treść -->
                <TextBlock Text="Treść wiadomości:" 
                          FontWeight="SemiBold" 
                          Foreground="#34495E" 
                          Margin="0,15,0,5"/>
                <TextBox x:Name="TrescTextBox" 
                        Height="80"
                        FontSize="13"
                        Padding="10"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"/>

                <!-- Podgląd czasu -->
                <Border Background="#EBF5FB" 
                       CornerRadius="8" 
                       Padding="15" 
                       Margin="0,15,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📅 Przypomnienie zostanie wysłane: " 
                                  Foreground="#3498DB"/>
                        <TextBlock x:Name="PodgladCzasuText" 
                                  Text="--" 
                                  FontWeight="Bold" 
                                  Foreground="#2C3E50"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Przyciski -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,15,0,0">
            <Button Content="Anuluj" 
                   Click="Anuluj_Click"
                   Width="100" 
                   Height="40"
                   Background="#95A5A6"
                   Foreground="White"
                   Margin="0,0,10,0"
                   Cursor="Hand"/>

            <Button Content="💾 Zapisz" 
                   Click="Zapisz_Click"
                   Width="120" 
                   Height="40"
                   Background="#27AE60"
                   Foreground="White"
                   FontWeight="Bold"
                   Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
