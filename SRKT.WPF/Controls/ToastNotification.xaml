<UserControl x:Class="SRKT.WPF.Controls.ToastNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="ToastRoot"
             Width="350"
             HorizontalAlignment="Right"
             VerticalAlignment="Top"
             Margin="0,10,10,0"
             Opacity="0"
             RenderTransformOrigin="1,0">

    <UserControl.RenderTransform>
        <TranslateTransform X="400"/>
    </UserControl.RenderTransform>

    <UserControl.Resources>
        <!-- Animacja wjazdu -->
        <Storyboard x:Key="SlideIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                            From="0" To="1" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                            From="400" To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Animacja wyjazdu -->
        <Storyboard x:Key="SlideOut">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                            From="1" To="0" Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                            From="0" To="400" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>

    <Border Background="White" 
           CornerRadius="10" 
           BorderBrush="#DCDDE1" 
           BorderThickness="1"
           Padding="15">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" 
                             ShadowDepth="5" 
                             Opacity="0.3"
                             Direction="270"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Ikona -->
            <Border Grid.Column="0" 
                   Width="40" Height="40" 
                   CornerRadius="20" 
                   Background="#3498DB" 
                   Margin="0,0,12,0"
                   VerticalAlignment="Center">
                <TextBlock Text="🔔" 
                          FontSize="18" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center"/>
            </Border>

            <!-- Treść -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock x:Name="TytulText" 
                          Text="Powiadomienie"
                          FontWeight="Bold" 
                          FontSize="14" 
                          Foreground="#2C3E50"
                          TextTrimming="CharacterEllipsis"
                          MaxWidth="220"/>
                
                <TextBlock x:Name="TrescText" 
                          Text="Treść powiadomienia"
                          FontSize="12" 
                          Foreground="#7F8C8D"
                          TextWrapping="Wrap"
                          TextTrimming="CharacterEllipsis"
                          MaxHeight="40"
                          MaxWidth="220"
                          Margin="0,4,0,0"/>
                
                <TextBlock x:Name="CzasText"
                          Text="Teraz"
                          FontSize="10"
                          Foreground="#95A5A6"
                          Margin="0,4,0,0"/>
            </StackPanel>

            <!-- Przycisk zamknięcia -->
            <Button Grid.Column="2" 
                   Content="✕" 
                   Width="28" Height="28"
                   Background="Transparent"
                   BorderThickness="0"
                   Foreground="#95A5A6"
                   FontSize="14"
                   Cursor="Hand"
                   VerticalAlignment="Top"
                   Click="CloseButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                           CornerRadius="14">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#ECF0F1"/>
                                <Setter Property="Foreground" Value="#E74C3C"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</UserControl>
