<Window x:Class="SRKT.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="System Rezerwacji Kortów Tenisowych" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu boczne -->
        <Border Grid.Column="0" Background="#2C3E50" Padding="10">
            <StackPanel>
                <TextBlock Text="Menu" 
                          Foreground="White" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Margin="0,10,0,30"/>

                <Button Content="Rezerwuj" 
                       Command="{Binding PokazDostepneKortyCommand}"
                       Style="{StaticResource MenuButtonStyle}"
                       Margin="0,5"/>

                <Button Content="Moje Rezerwacje" 
                       Command="{Binding PokazMojeRezerwacjeCommand}"
                       Style="{StaticResource MenuButtonStyle}"
                       Margin="0,5"/>

                <Button Content="Wyloguj" 
                       Command="{Binding WylogujCommand}"
                       Style="{StaticResource MenuButtonStyle}"
                       Margin="0,50,0,5"
                       Background="#E74C3C"/>

                <!-- Info użytkownika -->
                <Border Background="#34495E" 
                       CornerRadius="5" 
                       Padding="10" 
                       Margin="0,30,0,0">
                    <StackPanel>
                        <TextBlock Text="Zalogowany:" 
                                  Foreground="White" 
                                  FontSize="12"/>
                        <TextBlock Text="{Binding AktualnyUzytkownik.PelneImieNazwisko}" 
                                  Foreground="White" 
                                  FontSize="14" 
                                  FontWeight="Bold" 
                                  Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding AktualnyUzytkownik.Email}" 
                                  Foreground="#BDC3C7" 
                                  FontSize="11" 
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Obszar główny -->
        <ContentControl Grid.Column="1" 
                       Content="{Binding AktualnyWidok}"
                       Margin="10"/>
    </Grid>
</Window>                                   