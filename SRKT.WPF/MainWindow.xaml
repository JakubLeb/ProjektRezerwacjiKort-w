<Window x:Class="SRKT.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:SRKT.WPF.ViewModels"
        xmlns:views="clr-namespace:SRKT.WPF.Views"
        mc:Ignorable="d"
        Title="System Rezerwacji Kortów Tenisowych" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Automatyczne mapowanie ViewModeli na widoki -->
        <DataTemplate DataType="{x:Type viewModels:DostepneKortyViewModel}">
            <views:DostepneKortyView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:MojeRezerwacjeViewModel}">
            <views:MojeRezerwacjeView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModels:PowiadomieniaViewModel}">
            <views:PowiadomieniaView/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menu boczne -->
        <Border Grid.Column="0" Background="#2C3E50" Padding="10">
            <StackPanel>
                <TextBlock Text="Menu" 
                          Foreground="White" 
                          FontSize="20" 
                          FontWeight="Bold" 
                          Margin="0,10,0,10" 
                          HorizontalAlignment="Center"/>

                <Rectangle Height="1" 
                          Stroke="White" 
                          Margin="0,0,0,10"/>

                <Button Content="Dostępne Korty" 
                       Command="{Binding PokazDostepneKortyCommand}"
                       Style="{StaticResource MenuButtonStyle}"
                       Margin="0,5"/>

                <Button Content="Moje Rezerwacje" 
                       Command="{Binding PokazMojeRezerwacjeCommand}"
                       Style="{StaticResource MenuButtonStyle}"
                       Margin="0,5"/>

                <!-- Przycisk Powiadomienia z badge -->
                <Button Command="{Binding PokazPowiadomieniaCommand}"
                       Style="{StaticResource MenuButtonStyle}"
                       Margin="0,5">
                    <Grid Width="150">
                        <TextBlock Text="🔔 Powiadomienia" 
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Center"/>
                        <!-- Badge z liczbą nieprzeczytanych -->
                        <Border Background="#E74C3C" 
                               CornerRadius="10" 
                               Padding="6,2" 
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Visibility="{Binding WidocznoscBadgePowiadomien}">
                            <TextBlock Text="{Binding LiczbaNieprzeczytanych}" 
                                      Foreground="White" 
                                      FontSize="11" 
                                      FontWeight="Bold"/>
                        </Border>
                    </Grid>
                </Button>
                <Button Command="{Binding PokazPrzypomnieniCommand}"
       Style="{StaticResource MenuButtonStyle}"
       Margin="0,5">
                    <Grid Width="170">
                        <TextBlock Text="⏰ Przypomnienia" 
                  HorizontalAlignment="Left"
                  VerticalAlignment="Center"/>
                    </Grid>
                </Button>

                <Button Content="Wyloguj" 
                       Command="{Binding WylogujCommand}"
                       Style="{StaticResource MenuButtonStyle}"
                       Margin="0,50,0,5"
                       Background="#E74C3C"/>

                <!-- Info użytkownika -->
                <Border Background="#34495E" 
                       CornerRadius="5" 
                       Padding="10" 
                       Margin="0,30,0,0">
                    <StackPanel>
                        <TextBlock Text="Zalogowany:" 
                                  Foreground="White" 
                                  FontSize="12"/>
                        <TextBlock Text="{Binding AktualnyUzytkownik.PelneImieNazwisko}" 
                                  Foreground="White" 
                                  FontSize="14" 
                                  FontWeight="Bold" 
                                  Margin="0,5,0,0"/>
                        <TextBlock Text="{Binding AktualnyUzytkownik.Email}" 
                                  Foreground="#BDC3C7" 
                                  FontSize="11" 
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Obszar główny -->
        <Grid Grid.Column="1">
            <!-- Główna zawartość -->
            <ContentControl Content="{Binding AktualnyWidok}"
                           Margin="10"/>

            <!-- Kontener dla Toast Notifications (na wierzchu) -->
            <Grid x:Name="ToastContainer" 
                 HorizontalAlignment="Right" 
                 VerticalAlignment="Top"
                 Margin="0,10,10,0"
                 IsHitTestVisible="True"/>
        </Grid>
    </Grid>
</Window>
