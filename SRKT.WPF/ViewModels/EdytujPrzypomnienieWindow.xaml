<Window x:Class="SRKT.WPF.Views.EdytujPrzypomnienieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edytuj przypomnienie" 
        Height="400" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F6FA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nagłówek -->
        <TextBlock Grid.Row="0" 
                  Text="✏️ Edytuj przypomnienie" 
                  FontSize="22" 
                  FontWeight="Bold" 
                  Foreground="#2C3E50"
                  Margin="0,0,0,20"/>

        <!-- Formularz -->
        <Border Grid.Row="1" 
               Background="White" 
               CornerRadius="10" 
               Padding="20"
               BorderBrush="#DCDDE1" 
               BorderThickness="1">
            <StackPanel>
                <!-- Data i czas -->
                <TextBlock Text="Data i godzina przypomnienia:" 
                          FontWeight="SemiBold" 
                          Foreground="#34495E" 
                          Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <DatePicker x:Name="DataPicker" 
                               Height="35"
                               Margin="0,0,10,0"/>
                    <TextBox x:Name="CzasTextBox" 
                            Grid.Column="1"
                            Height="35"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center"
                            FontSize="14"/>
                </Grid>

                <!-- Tytuł -->
                <TextBlock Text="Tytuł:" 
                          FontWeight="SemiBold" 
                          Foreground="#34495E" 
                          Margin="0,0,0,5"/>
                <TextBox x:Name="TytulTextBox" 
                        Height="35"
                        FontSize="13"
                        Padding="10,8"
                        Margin="0,0,0,15"/>

                <!-- Treść -->
                <TextBlock Text="Treść wiadomości:" 
                          FontWeight="SemiBold" 
                          Foreground="#34495E" 
                          Margin="0,0,0,5"/>
                <TextBox x:Name="TrescTextBox" 
                        Height="80"
                        FontSize="13"
                        Padding="10"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
        </Border>

        <!-- Przyciski -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right" 
                   Margin="0,15,0,0">
            <Button Content="Anuluj" 
                   Click="Anuluj_Click"
                   Width="100" 
                   Height="40"
                   Background="#95A5A6"
                   Foreground="White"
                   Margin="0,0,10,0"
                   Cursor="Hand"/>

            <Button Content="💾 Zapisz" 
                   Click="Zapisz_Click"
                   Width="120" 
                   Height="40"
                   Background="#27AE60"
                   Foreground="White"
                   FontWeight="Bold"
                   Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
